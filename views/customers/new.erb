<form action="/customers/" method="post">

<label for="first_name">First Name</label>
<input id="first-name" type="text" name="first_name">
<br>

<label for="last_name">Last Name</label>
<input id="last-name" type="text" name="last_name">
<br>
<label for="species_preference">Preference:</label>
<select class="species_preference" name="species_preference">
  <option value="Dog">Dog:: Breed:</option>
  <option value="Cat">Cat:: Breed:</option>
  <option value="Other">Other:: Species:</option>
</select>
<input id="type_preference" type="text" name="type_preference" value="Unknown">

<br>

<input type="submit" value="Create Customer" class="button_create">

</form>
