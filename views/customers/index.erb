<h1>Customers /index</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Number of Adoptions</th>
    <th>Link to customer</th>
  </tr>
  <% @customers.each do |customer| %>
  <tr>
    <td><%= customer.first_name %></td>
    <td><%= customer.last_name %></td>
    <td><%= customer.number_of_adoptions %></td>
    <td><a href="/customers/<%= customer.id %>">link</a></td>
  </tr>
  <% end %>
</table>
