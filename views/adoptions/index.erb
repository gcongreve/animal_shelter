<h2>All the previous adoptions are here:</h2>

<table>
  <tr>
    <th>Adoption ID</th>
    <th>Pet </th>
    <th>Customer </th>
    <th>Link to adoption</th>
  </tr>
  <% @adoptions.each do |adoption| %>
  <tr>
    <td><%= adoption.id%></td>
    <td> <a href="/animals/<%= adoption.animal.id %>"> <%= adoption.animal_name %> : <%= adoption.animal.display_type %></td></a>
    <td> <a href="/customers/<%= adoption.customer.id %>"> <%= adoption.customer.full_name %> </a></td>
    <td><a href="/adoptions/<%= adoption.id %>">link</a></td>
  </tr>
  <% end %>
</table>
